{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "strict": true,
    "lib": ["es5", "ES2015", "es6", "es7", "es2017", "dom", "esnext", "esnext.asynciterable"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./types.d"
    ],
    "rootDirs": [],
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "downlevelIteration": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "internal/**/*",
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}